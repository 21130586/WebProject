				</div>

				<!-- Contact Info -->
				<div class="col-md-6">
					<div class="d-flex align-items-start mb-3">
						<img src="assets/images/Icon/phone.svg" alt="Phone Icon"
							class="me-3" width="24" />
						<div>
							<h6 class="fw-bold mb-0">Liên hệ</h6>
							<p class="mb-0">+84 1234567890</p>
						</div>
					</div>
					<div class="d-flex align-items-start mb-3">
						<img src="assets/images/Icon/diachi.svg" alt="Address Icon"
							class="me-3" width="24" />
						<div>
							<h6 class="fw-bold mb-0">Địa chỉ</h6>
							<p class="mb-0">Số 1 Tây Sơn, Đống Đa, Hà Nội</p>
						</div>
					</div>
					<div class="d-flex align-items-start">
						<img src="assets/images/Icon/mail.svg" alt="Email Icon"
							class="me-3" width="24" />
						<div>
							<h6 class="fw-bold mb-0">Email</h6>
							<p class="mb-0">info@example.com</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Social Media Section -->
			<div class="row">
				<div class="col text-center">
					<h6 class="fw-bold">Follow Us</h6>
					<a href="#"> <img src="assets/images/Icon/Social Media.svg"
						alt="Icon 1" width="24" class="me-2" />
